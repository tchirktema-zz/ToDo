<%= form_for @item do |f| %>
	<div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label mdl-cell mdl-cell--12-col">
		<%= f.text_field :title ,:class=>"mdl-textfield__input"%>
		<%= f.label :title,:class=>"mdl-textfield__label" %>
	</div>

	<div class="mdl-textfield mdl-js-textfield mdl-cell mdl-cell--12-col">
		<%= f.text_area :description,:class=>"mdl-textfield__input"%>
		<%= f.label :description, :class=>"mdl-textfield__label"%>
	</div>

	<div>
		<%= f.submit :class=>"mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect"%>
	</div>
		
<% end -%>
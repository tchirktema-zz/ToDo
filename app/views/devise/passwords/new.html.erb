<div class="mdl-grid ">
  
	<div class="mdl-cell mdl-cell--4-col-desktop mdl-cell--4-offset-desktop ">
	    <div class="devise-card mdl-card mdl-shadow--2dp">
	      <div class="mdl-card__title">
	        <h2 class="mdl-card__title-text">Forgot your password</h2>
	      </div>
	      <div class="mdl-card__supporting-text">
				<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
				  <%= devise_error_messages! %>

				  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label mdl-cell mdl-cell--12-col">
				    <%= f.label :email,:class=>"mdl-textfield__label" %><br />
				    <%= f.email_field :email, autofocus: true,:class=>"mdl-textfield__input" %>
				  </div>

				  <div class="actions">
				    <%= f.submit "Send me reset password instructions" ,:class=>"mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect"%>
				  </div>
				<% end %>
				<div class="">
					<br>
					<%= render "devise/shared/links" %>
				</div>
			</div>
		</div>
	</div>
</div>